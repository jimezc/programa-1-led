__CONFIG _CP_OFF & _WDT_OFF & _PWRTE_ON & _XT_OSC
    LIST P=16F84A
    #Include <P16F84A.INC>
    LED EQU 0
    BOTON EQU 0
	ORG 0
	BSF STATUS, RP0
	BSF TRISA, 0
	BCF TRISB, 0
	BCF STATUS, RP0 ;PARA INICIAR EN BANCO 0
	BCF PORTB, LED
	
INICIO	BTFSC PORTA, BOTON
	GOTO    ENCENDER
	BCF	PORTB, LED
	GOTO INICIO
	
ENCENDER BSF PORTB, LED
	GOTO INICIO
	END
